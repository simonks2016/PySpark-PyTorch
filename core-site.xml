<configuration>
    <!-- NameNode 地址（修改为你的 Hadoop Master IP 或主机名） -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://172.25.158.215:9000</value>
    </property>
    <!-- Hadoop RPC 端口 -->
    <property>
        <name>hadoop.rpc.protection</name>
        <value>authentication</value>
    </property>
    <!-- 允许 HDFS 访问 -->
    <property>
        <name>hadoop.security.authentication</name>
        <value>simple</value>
    </property>
</configuration>
